<h3>Irrepairable</h3>	
<table class="table table-striped table-condensed">
	<thead>
		<th>Name</th>
		<th>Description</th>
		<th>Quantity</th>
		<th>Quantity Used</th>
		<th>Status</th>
	</thead>
	<tbody>
		<% @labstocks_irrepairs.each do|f| %>
			<tr>
				<td><%=f.office.name%></td>
				<td><%=f.office.description%></td>
				<td><%=f.quantity%></td>
				<td><%=f.quantity_used%></td>
				<%if f.status=="P"%>
			    <td>Perfect</td>
				<%elsif f.status=="R"%>
					<td>Needs Repair</td>
				<%elsif f.status=="I"%>
					<td>Irrepairable</td>
				<%else%>
				  <td>Write Off</td>
				<%end%>	
				<td><%= link_to "Change","#",:class=>"btn btn-primary btn-small"%> </td>    	
			</tr>
		<%end%>
	</tbody>
</table>