<h3>Needs Repair</h3>	
<div style="width:100%;height:300px;overflow:auto">
<table class="table table-striped table-condensed">
	<thead>
		<th style="width:20px">Name</th>
		<th style="width:20px">Description</th>
		<th style="width:20px">Quantity</th>
		<th style="width:20px">Quantity Used</th>
		<th style="width:20px">Status</th>
	</thead>
	<tbody>
		<% @labstocks_repairs.each do|f| %>
			<tr>
				<td><%=f.office.name%></td>
				<td><%=f.office.description%></td>
				<td><%=f.quantity%></td>
				<td><%=f.quantity_used%></td>
				<%if f.status=="P"%>
			    <td>Perfect</td>
				<%elsif f.status=="R"%>
					<td>Needs Repair</td>
				<%elsif f.status=="I"%>
					<td>Irrepairable</td>
				<%else%>
				  <td>Write Off</td>
				<%end%>	
				<td>
					<%= form_tag("/lab/update/#{f.id}", method: :post) do%>
				
  					<%= select_tag :status, options_for_select([["Select to change", ""], ["Perfectly working","P"], ["Needs Repair","R"], ["Irrepairable","I"],["WriteOff","W"]]) %>
  					<%= submit_tag "Change",:class=>"btn btn-primary btn-small", prompt: true%>
  					<%end%>  
  				</td>  
			</tr>
		<%end%>
	</tbody>
</table>
</div>