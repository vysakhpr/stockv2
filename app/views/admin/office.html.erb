<h2>Office Stock</h2>

<div ><%= link_to "Add Stock", "office/new", :class=>"btn btn-primary btn-small"%></div><br/>
<div class="alert alert-info" style= "width:75%" >
	<div style="width:100%;height:300px;overflow:auto">
<table class="table table-striped table-condensed table-responsive office_stock" >
	<thead>
		STOCK
		<tr>
		 <th><%= sortable "date","Date" %></th>
		 <th><%= sortable "voucher_no.","VoucherNo" %></th>
		 <th><%= sortable "department","Department" %></th>
		 <th><%= sortable "name","Name" %></th>
		 <th><%= sortable "description","Description" %></th>
		 <th><%= sortable "price_unit","Price Unit" %></th>
		 <th><%= sortable "quantity","Quantity" %></th>
		 <th><%= sortable "total_price","Total Price" %></th>
		</tr>
	</thead>
	<tbody>
		<% @offices.each do |t| %>
			<tr>
				<td><%=t.date%></td>
				<td><%=t.voucher_no%></td>
				<td><%=t.department%></td>
				<td><%=t.name%></td>
				<td><%=t.description%></td>
				<td><%=t.price_unit%></td>
				<td><%=t.quantity%></td>
				<td><%=t.total_price%></td>
			</tr>
		<%end%>  
	</tbody>
</table>
</div>
</div>