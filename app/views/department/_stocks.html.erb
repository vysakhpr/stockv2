<div>
	<div style="width:100%;height:300px;overflow:auto">
<table class="table table-striped table-condensed table-responsive office_stock" >
	<thead>
		STOCK
		<tr>
		 <th style="width:80px"><%= sortable "date","Date" %></th>
		 <th style="width:80px"><%= sortable "name","Name" %></th>
		 <th style="width:80px"><%= sortable "description","Description" %></th>
		 <th style="width:30px"><%= sortable "quantity","Quantity" %></th>
		 <th style="width:30px"><%= sortable "total_price","Total Price" %></th>
		 <th style="width:30px">Remaining</th>
		 <th style="width:30px"></th>

		</tr>
	</thead>
	<tbody>
		<% @offices.each do |t| %>
			<tr>
				<td><%=t.date%></td>
				<td><%=t.name %></td>
				<td><%=t.description%></td>
				<td><%=t.quantity%></td>
				<td><%=t.total_price%></td>
				<td><%=t.quantity-t.quantity_assigned%></td>
				<td><%= link_to "Details","/office/show/#{t.id}", :method=> :post, :class=>"btn btn-info btn-mini" %></td> 
			</tr>
		<%end%>  
	</tbody>
</table>
</div>
</div>